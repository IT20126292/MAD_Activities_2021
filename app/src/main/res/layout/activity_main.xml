<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Cam_Temp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_TakePhoto"
        android:layout_width="171dp"
        android:layout_height="54dp"
        android:layout_marginTop="40dp"
        android:text="@string/btn_TakePhoto"
        android:textColor="@color/btn_takePhoto"
        android:textSize="14sp"
        android:textStyle="bold"
        app:backgroundTint="@color/btn_TakePhoto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CamView" />

    <ImageView
        android:id="@+id/CamView"
        android:layout_width="306dp"
        android:layout_height="378dp"
        android:layout_marginTop="24dp"
        android:adjustViewBounds="false"
        android:background="@drawable/border"
        android:fadingEdge="horizontal"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="@+id/btn_TakePhoto"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/btn_TakePhoto"
        app:layout_constraintTop_toBottomOf="@+id/header"
        app:srcCompat="@android:drawable/ic_menu_report_image" />

    <TextView
        android:id="@+id/header"
        android:layout_width="230dp"
        android:layout_height="41dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="@string/header"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/CamView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/CamView"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>